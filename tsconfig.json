{
    "compilerOptions": {
        "target": "esnext",
        "strict": true,
        "module": "esnext",
        "jsx": "preserve",
        "moduleResolution": "node",
        "sourceMap": true,
    },
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.tsx",
        "resources/js/**/*.vue",
        "resources/js/**/*.js"
    ],
    "exclude": [
        "node_modules",
        "vendor"
    ]
}
